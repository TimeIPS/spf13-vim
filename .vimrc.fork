color peaksea
highlight clear SignColumn

set mouse=
set nospell

let g:spf13_no_keyfixes = 1
let g:spf13_keep_trailing_whitespace = 1

" For when we want to use tagbar
let g:tagbar_autofocus = 1
let g:tagbar_autoclose = 1

let NERDTreeQuitOnOpen=0

" Options for powerline
set encoding=utf-8

" Remap Ctrl-Alt-x to Ctrl-a so we can increment numbers within screen/tmux
nmap  

" Easy align arrays
nmap <Leader>a> :Tabularize /=><CR>
vmap <Leader>a> :Tabularize /=><CR>

" Fold all the things
nmap <leader>ff :EnableFastPHPFolds<CR>
nmap <leader>fs :syn sync fromstart<CR>

" Easy auto format the file
nmap <leader>ga gg=G

" Faster buffer navigation
nmap <leader>bn :bn<CR>
nmap <leader>bp :bp<CR>
nmap <leader>bd :bp\|bd#<CR>

" Powerline
set rtp+=~/.local/lib/python2.7/site-packages/powerline/bindings/vim

" Disable autoclose by default
let g:autoclose_on = 0

let g:gitgutter_realtime = 0
